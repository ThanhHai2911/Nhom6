<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.TrangCaNhan"
    android:orientation="vertical"
    android:background="#333333"
    android:padding="16dp"
    >
    <!-- Admin TextView -->
    <TextView
        android:id="@+id/adminLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin"
        android:textColor="#FF9999"
        android:textStyle="bold"
        android:layout_gravity="end"
        android:padding="8dp" />

    <!-- User Avatar -->
    <ImageView
        android:id="@+id/userAvatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/canhan"
        android:layout_gravity="center"
        android:layout_marginTop="16dp" />

    <!-- Personal Info Button -->
    <Button
        android:id="@+id/personalInfoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thông tin cá nhân"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF66B2"
        android:layout_gravity="center"
        android:layout_marginTop="16dp" />

    <!-- Name and Phone Number Fields -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center"
        >
        <TextView
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Họ tên: "
            android:textSize="20sp"
            />
        <TextView
            android:gravity="start"
            android:id="@+id/tvTenNguoiDung"
            android:padding="7sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Huỳnh Văn Duy"
            android:textSize="20sp"
            android:background="@drawable/rounded_search_bar"
            />

    </LinearLayout>


    <!-- Name and Phone Number Fields -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center"
        >
        <TextView
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sdt: "
            android:textSize="20sp"
            />
        <TextView
            android:gravity="start"
            android:id="@+id/tvsdtNuoiDung"
            android:padding="7sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="0818866077"
            android:textSize="20sp"
            android:background="@drawable/rounded_search_bar"
            />

    </LinearLayout>

    <!-- Update Info Button -->
    <Button
        android:id="@+id/updateInfoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chỉnh sửa thông tin"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF66B2"
        android:layout_gravity="center"
        android:layout_marginTop="16dp" />

    <!-- Watched Movies Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/watchedMoviesLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lịch sử đã xem 🎬"
            android:textColor="#FFFFFF"
             />
        <TextView
            android:id="@+id/Xemtatca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xem tất cả"
            android:gravity="end"
            android:textColor="#e21b5e"
            />

    </LinearLayout>


    <!-- RecyclerView for Watched Movies -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewMovies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:scrollbars="horizontal"
        android:clipToPadding="false"
        android:padding="8dp"

       />

    <!-- Favorite List, Support, and Settings Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:background="#c3bcbf"
            android:padding="5sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/dsYeuThich"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_weight="10"
                android:layout_height="wrap_content"
                android:text="Danh sách yêu thích"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="20sp"
                android:layout_weight="1"
                android:src="@drawable/img_1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="7sp"
            android:background="#c3bcbf"
            android:padding="5sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/dsLichSuXem"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_weight="10"
                android:layout_height="wrap_content"
                android:text="Lịch su xem"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="20sp"
                android:layout_weight="1"
                android:src="@drawable/img_1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="7sp"
            android:background="#c3bcbf"
            android:padding="5sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/caiDat"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_weight="10"
                android:layout_height="wrap_content"
                android:text="Cài đặt"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="20sp"
                android:layout_weight="1"
                android:src="@drawable/img_1"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
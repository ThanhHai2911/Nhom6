<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#424242"

    tools:context=".activity.AdminActivity">

    <!-- Header Admin Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#F06292"
            android:padding="8dp">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_admin_avatar"
                />

            <TextView
                android:id="@+id/tvAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADMIN"
                android:textSize="40sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:paddingStart="16dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="7dp"
        android:layout_height="wrap_content">
        <!-- Tổng quan Title -->
        <ImageView
            android:id="@+id/ivButtonMenu"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/menu"
            android:padding="10dp"
            android:textColor="#FFFFFF"
            android:clickable="true"
        />

        <TextView
            android:id="@+id/tvTổngQuan"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:text="Tổng quan"
            android:gravity="center"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <!-- Today and 7-day buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="8dp">
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <Button
                android:id="@+id/btnHômNay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hôm nay"
                android:backgroundTint="#E0E0E0"
                android:textColor="#000000" />

            <Button
                android:id="@+id/btn7Ngày"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7 ngày qua"
                android:layout_marginStart="8dp"
                android:backgroundTint="#E0E0E0"
                android:textColor="#000000" />
            <Button
                android:id="@+id/btnThang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 tháng qua"
                android:layout_marginStart="8dp"
                android:backgroundTint="#E0E0E0"
                android:textColor="#000000" />
            <Button
                android:id="@+id/btnnam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 nam qua"
                android:layout_marginStart="8dp"
                android:backgroundTint="#E0E0E0"
                android:textColor="#000000" />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <!-- Stats Section with icons -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"

        android:layout_marginBottom="16dp"
        android:layout_margin="8dp">

        <!-- Doanh thu -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:padding="16dp"
            android:layout_margin="9dp"
            android:orientation="horizontal"
            android:background="@drawable/rounded_corner"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_doanh_thu"
                android:layout_marginEnd="16dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDoanhThu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Doanh thu"
                    android:textSize="15sp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tvDoanhThuAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="999.000 đ"
                    android:textSize="20sp"
                    android:textColor="#424242"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Truy cập -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@drawable/rounded_corner"
            android:padding="16dp"
            android:layout_margin="9dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_truy_cap"

                android:layout_marginEnd="16dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTruyCap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Truy cập"
                    android:textSize="15sp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tvTruyCapAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="34.853"
                    android:textSize="20sp"
                    android:textColor="#424242"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Lượt đăng ký -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@drawable/rounded_corner"
            android:padding="16dp"

            android:layout_margin="9dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_luot_dang_ky"

                android:layout_marginEnd="16dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvLuotDangKy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lượt đăng ký"
                    android:textSize="15sp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tvLuotDangKyAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20sp"
                    android:textColor="#424242"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Gói VIP -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@drawable/rounded_corner"
            android:padding="16dp"
            android:layout_margin="9dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_goi_vip"

                android:layout_marginEnd="16dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvGoiVIP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gói VIP"
                    android:textSize="15sp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tvGoiVIPAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:textSize="20sp"
                    android:textColor="#424242"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>
    </GridLayout>

    <!-- Top phim section -->
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="8dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="26dp"
            android:gravity="center"
            android:layout_margin="10dp"
            android:text="Biểu Đồ"/>

        <!-- BarChart to display the data -->
        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barChart"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="16dp"/>


    </LinearLayout>


</LinearLayout>
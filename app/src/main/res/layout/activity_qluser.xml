<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.QLUserActivity">

    <!-- Nút quay lại và tiêu đề -->
    <LinearLayout
        android:background="#4D4D4D"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Nút quay lại -->
        <ImageView
            android:padding="20dp"
            android:id="@+id/btnBack"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/ic_back"
            android:contentDescription="@string/back"
            />

        <!-- Tiêu đề -->
        <TextView
            android:gravity="center"
            android:id="@+id/title"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Quản lý User"
            android:textSize="26sp"
            android:textColor="@android:color/black" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_search_bar"
            android:padding="5dp"
            android:gravity="center_vertical">
            <!-- Icon tìm kiếm -->
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/search"
                android:clickable="true"
                android:padding="8dp" />

            <!-- EditText cho tìm kiếm -->
            <EditText
                android:id="@+id/searchEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Tìm kiếm user"
                android:background="@null"
                android:textColorHint="#ffffff"
                android:textColor="#ffffff"
                android:padding="8dp"
                android:inputType="text" />
        </LinearLayout>
        <!-- ComboBox (Spinner) để chọn trạng thái online/offline -->
        <Spinner
            android:id="@+id/spinnerStatus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            android:spinnerMode="dropdown"/>

    </LinearLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_marginBottom="16dp"
        android:layout_margin="8dp">
        <!-- Lượt đăng ký -->
        <LinearLayout
            android:id="@+id/btnYeuCau"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@drawable/rounded_corner"
            android:padding="16dp"

            android:layout_margin="9dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_luot_dang_ky"
                android:layout_marginEnd="16dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvLuotDangKy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lượt đăng ký Gói Vip"
                    android:textSize="15sp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tvSLUserDangKy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20sp"
                    android:textColor="#424242"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Gói VIP -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@drawable/rounded_corner"
            android:padding="16dp"
            android:layout_margin="9dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_goi_vip"

                android:layout_marginEnd="16dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvGoiVIP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tổng số User dùng gói VIP"
                    android:textSize="15sp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tvSLGoiVipDangKy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:textSize="20sp"
                    android:textColor="#424242"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>
    </GridLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:listitem="@layout/item_user"
        android:padding="10dp"
        android:layout_weight="8"/>


</LinearLayout>
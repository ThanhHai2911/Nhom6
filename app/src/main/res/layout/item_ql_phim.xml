<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/movie_item_background"
    android:padding="8dp"
    android:layout_marginBottom="16dp"
    >
    <!-- Movie Image -->
    <ImageView
        android:id="@+id/imgmovie"
        android:layout_width="80dp"
        android:layout_height="103dp"
        />
        <!-- Replace with your image -->
    <!-- Movie Details -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="16dp">

        <TextView
            android:id="@+id/tenphim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chú chuột meo"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-medium"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Năm: "
                android:textSize="14sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/nam"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="2024"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/loaiphim"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:text=" (phim bộ) Tập: 20??"
                android:textSize="14sp"
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thể loại: "
                android:textSize="14sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/theloai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[Hài] [Gia đình] [Tình cảm]"
                android:textSize="14sp"
                android:background="#09ebfd"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trạng thái: "
                android:textSize="14sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/trangthai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hoạt động"
                android:textSize="14sp"
                android:background="#09fd40"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày tạo: "
                android:textSize="14sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/ngaytao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20/02/2024"
                android:textSize="14sp"
                />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
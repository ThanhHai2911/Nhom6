<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#696969">
    <RelativeLayout
        android:id="@+id/videoContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- Video Player -->
        <androidx.media3.ui.PlayerView
            android:id="@+id/playerView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:resize_mode="fill"
            android:background="#000">

            <ImageButton
                android:id="@+id/btnFullScreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:layout_margin="8dp"
                android:background="?android:selectableItemBackgroundBorderless"
                android:text="@string/fullscreen"
                android:src="@drawable/ic_fullscreen"
                android:contentDescription="@null" />

        </androidx.media3.ui.PlayerView>

        <!-- Movie Information -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/playerView"
            android:padding="5dp">

            <!-- Favorite and Download Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="#708090"
                android:layout_gravity="center">

                <ImageButton
                    android:id="@+id/btnAddToFavorites"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/baseline_favorite_24"
                    android:contentDescription="@null" />

                <ImageButton
                    android:id="@+id/btnDowload"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/baseline_download_24"
                    android:contentDescription="@null"
                    app:tint="#3b5998" />

                <ImageButton
                    android:id="@+id/btnReport"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/baseline_report_24"
                    android:contentDescription="@null"
                    app:tint="#3b5998" />

                <ImageButton
                    android:id="@+id/btnShare"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/ic_share_24"
                    android:contentDescription="@null"
                    app:tint="#3b5998" />
            </LinearLayout>

            <!-- Movie Title -->
            <TextView
                android:id="@+id/tvMovieTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:paddingTop="5dp"
                android:background="@drawable/text_title"
                android:paddingBottom="5dp" />

            <!-- Episode List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvTapPhim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/text_description_background"
                android:clipToPadding="false"
                android:paddingTop="5dp"
                android:scrollbars="horizontal" />

            <!-- Comment Section -->
            <TextView
                android:id="@+id/tvCommentHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bình luận"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:padding="5dp" />

            <EditText
                android:id="@+id/commentInput"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:hint="Viết bình luận của bạn..."
                android:background="@drawable/text_description_background"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnSubmitComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gửi bình luận"
                android:textColor="@android:color/white"
                android:background="#FF4500"
                android:layout_gravity="end"
                android:layout_marginBottom="8dp" />

            <!-- Comment List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvComments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:scrollbars="vertical" />

        </LinearLayout>
    </RelativeLayout>

</ScrollView>

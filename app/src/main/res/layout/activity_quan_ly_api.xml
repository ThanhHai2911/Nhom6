<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#696969">

    <!-- Header Layout -->
    <LinearLayout
        android:id="@+id/headerSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#333333"
        android:padding="10dp">

        <ImageView
            android:id="@+id/exitIcon"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/exit_left"
            android:contentDescription="Exit Icon" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="Quản Lý API"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center_vertical" />
    </LinearLayout>

    <!-- RecyclerView for API List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvApiList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerSection"
        android:layout_marginTop="8dp" />

    <!-- Input Section -->
    <LinearLayout
        android:id="@+id/layoutInputSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#424242"
        android:padding="16dp"
        android:layout_alignParentBottom="true">

        <EditText
            android:id="@+id/etApiName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="API Name"
            android:backgroundTint="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:padding="8dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etApiUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="API URL"
            android:backgroundTint="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:padding="8dp"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnAddApi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Add API"
                android:backgroundTint="#4CAF50"
                android:textColor="@android:color/white"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btnUpdateApi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Update API"
                android:backgroundTint="#FFA000"
                android:textColor="@android:color/white"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btnDeleteApi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Delete API"
                android:backgroundTint="#F44336"
                android:textColor="@android:color/white"
                android:layout_marginStart="4dp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>

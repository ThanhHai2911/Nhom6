<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF4081"/> <!-- Màu khi nhấn vào -->
            <corners android:radius="8dp"/>
            <stroke
                android:width="2dp"
                android:color="#FFFFFF" /> <!-- Viền trắng -->
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#673AB7"/> <!-- Màu nền mặc định -->
            <corners android:radius="8dp"/>
            <stroke
                android:width="2dp"
                android:color="#FFFFFF" /> <!-- Viền trắng -->
        </shape>
    </item>
</selector>

<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Màu nền -->
    <solid android:color="#E0E0E0" /> <!-- Màu xám nhạt -->

    <!-- Bo góc -->
    <corners android:radius="12dp" />

    <!-- Viền -->
    <stroke
        android:width="2dp"
        android:color="#BDBDBD" /> <!-- Màu viền xám đậm -->

    <!-- Đổ bóng nhẹ -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>

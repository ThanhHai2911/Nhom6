<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Button Pressed State -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF6200EE" /> <!-- Darker color when pressed -->
            <corners android:radius="16dp" /> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Button Default State -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FF6200EE"
                android:endColor="#FF3700B3"
                android:angle="45" /> <!-- Gradient angle -->
            <corners android:radius="16dp" /> <!-- Rounded corners -->
            <stroke android:width="2dp" android:color="#FFFFFF" /> <!-- Optional border -->
        </shape>
    </item>
</selector>
